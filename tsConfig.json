{
  "compilerOptions": {

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
        "noEmitOnError": false,
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  }, 

  "ts-node": {
    "esm": true
  },
  
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
