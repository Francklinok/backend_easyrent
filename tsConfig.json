{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      // "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "types": ["node"]
    },
    "include": ["src", "auth", "config", "server"],
    "exclude": ["node_modules", "dist"]
  }
  